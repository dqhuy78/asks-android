<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:paddingEnd="20dp"
    android:paddingStart="20dp">

    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView2"
        android:text="Update your question"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edTitle"
        android:layout_alignStart="@+id/edTitle"
        android:layout_below="@+id/pageTitle"
        android:layout_marginTop="35dp"
        android:text="Question title:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="5dp"
        android:hint="Your question title?"
        android:inputType="textPersonName"
        android:textColor="#191919"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edTitle"
        android:layout_marginTop="10dp"
        android:text="Tag:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/edTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="5dp"
        android:hint="Your question tags?"
        android:inputType="textPersonName"
        android:textColor="#191919"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/pageTitle"
        android:layout_marginTop="166dp"
        android:text="Your question here:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edQuestion"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="5dp"
        android:gravity="start"
        android:hint="Your question?"
        android:inputType="textMultiLine"
        android:selectAllOnFocus="true"
        android:singleLine="false"
        android:textColor="#191919"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnDraf"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/edQuestion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="Draft" />

    <Button
        android:id="@+id/btnPublish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pageTitle"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/edQuestion"
        android:layout_marginTop="20dp"
        android:text="Publish"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/pageTitle"
        android:layout_alignTop="@+id/btnDraf"
        android:text="Cancel" />

</RelativeLayout>
